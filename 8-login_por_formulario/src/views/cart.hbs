<h1 class="my-4">{{title}}</h1>
{{#if cart}}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Thumbnail</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr class="align-middle">
          <td><img
              src="{{product.thumbnails}}"
              alt="Thumbnail"
              style="width:5rem"
            /></td>
          <td><a href="/product/{{product._id}}">
            {{product.title}}</td>
          </a>
          <td>{{product.price}}</td>
          <td>{{quantity}} </td>
          <td><button onclick="deleteProduct('{{product._id}}')">X</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div>
    <div class="my-4">
      <h5 colspan="5">No products in cart ü§∑‚Äç‚ôÇÔ∏è</h5>
    </div>
  </div>
{{/if}}
<div class="d-flex justify-content-end p-2 m-3">
  <div>
    <a href="/products?page={{prevPage}}" class="btn btn-warning">Return</a>
    <a href="#" class="btn btn-danger" onclick="emptyCart()">Empty cart</a>
  </div>
</div>
<script src="/js/cart.js"></script>