<div class="container">
  <div class="row">
    <div class="jumbotron text-left border bg-warning">
      <h3 class="p-3">{{nameShopping}} - List of products</h3>
    </div>
  </div>

  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-9 my-4">
          {{#if products}}
            <div class="row w-100">
              {{#each products}}
                <div class="col-3 my-4">
                  <div class="text-center">
                    <h5 class="h5">{{title}}</h5>

                    <div class="col">
                      <div>
                        <img
                          class="thumb img-thumbnail"
                          src="{{thumbnails}}"
                          alt="{{title}}"
                        />
                      </div>
                      <div>
                        <ul class="list-group list-group-flush">
                          <li
                            class="list-group-item list-group-item-action"
                          ><strong>Description:</strong><br />
                            {{description}}</li>
                          <li class="list-group-item list-group-item-action">
                            {{category}}</li>
                          <li
                            class="list-group-item list-group-item-action"
                          ><strong>Code:</strong>
                            #{{code}}</li>
                          <li
                            class="list-group-item list-group-item-action"
                          ><strong>Price:</strong> ${{price}}</li>
                          <li class="list-group-item list-group-item-action">
                            {{stock}}
                            unidades</li>
                        </ul>
                      </div>
                      <div>
                        <input
                          class="btn btn-danger my-3"
                          type="button"
                          value="X"
                        />
                      </div>
                    </div>
                  </div></div>
              {{/each}}
            </div>
          {{else}}
            <div class="row w-100 my-4">
              <p>Not products found ü§∑‚Äç‚ôÇÔ∏è</p>
            </div>
          {{/if}}
        </div>

        <div class="col-3">
          <div class="row">
            <div class="container mx-auto my-5">
              <form
                id="addProduct"
                action="/api/products"
                method="POST"
                enctype="multipart/form-data"
                onsubmit="return addProduct(this)"
              >
                <fieldset>
                  <legend>Add a product</legend>
                  <div class="form-group">
                    <label for="product-title">Product title</label>
                    <input
                      type="text"
                      class="form-control"
                      id="product-title"
                      placeholder="Title"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <label for="product-code">Product code</label>
                    <input
                      type="number"
                      name="code"
                      class="form-control"
                      id="product-code"
                      placeholder="Code"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="product-price">Product price</label>
                    <input
                      type="number"
                      name="price"
                      class="form-control"
                      id="product-price"
                      placeholder="Price"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="product-stock">Product price</label>
                    <input
                      type="number"
                      name="stock"
                      class="form-control"
                      id="product-stock"
                      placeholder="Stock"
                      required
                    />
                    <div>
                      <div class="form-group">
                        <label for="thumbnails">Thumbnails*</label>
                        <input
                          type="file"
                          multiple="true"
                          class="form-control"
                          id="thumbnails"
                          name="thumbnails"
                          multiple
                          autofocus
                        />
                      </div>
                      <div class="form-group">
                        <label for="product-description">Description:</label>
                        <textarea
                          name="description"
                          class="form-control"
                          id="product-description"
                          cols="30"
                          rows="5"
                          placeholder="Description"
                          required
                        ></textarea>

                      </div>
                      <div class="form-group my-3">
                        <input
                          type="submit"
                          value="+ product"
                          class="btn btn-dark w-100 font-weight-bold"
                          id="submitForm"
                        />
                      </div>

                    </div>
                  </div>
                </fieldset>

              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/index2.js"></script>