<section class="vh-50" style="background-color: #eee;">
  <div class="container py-5 h-75">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img
                src="{{thumbnails}}"
                class="rounded-circle img-fluid"
                style="width: 100px;"
              />
            </div>
            <h4 class="mb-2">{{user.name}}</h4>
            <p class="text-muted mb-4"><a href="#!">{{user.email}}</a></p>
            <p class="text-muted mb-4">{{user.role}}</p>
            <div class="mb-4 pb-2">
              <button
                type="button"
                class="btn btn-outline-dark btn-floating p-3"
              >
                <i class="fab fa-facebook-f fa-lg"></i>
              </button>
              <button
                type="button"
                class="btn btn-outline-dark btn-floating p-3"
              >
                <i class="fab fa-twitter fa-lg"></i>
              </button>
              <button
                type="button"
                class="btn btn-outline-dark btn-floating p-3"
              >
                <i class="fab fa-skype fa-lg"></i>
              </button>
            </div>
            <button type="button" class="btn btn-warning btn-rounded btn-lg">
              Message now
            </button>
            <div class="d-flex justify-content-around text-center mt-5 mb-2">
              <div class="px-3">
                <p class="mb-2 h5">003</p>
                <p class="text-muted mb-0">Shipments</p>
              </div>
              <div>
                <p class="mb-2 h5">10</p>
                <p class="text-muted mb-0">Queries Made</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>